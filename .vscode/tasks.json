{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clang compile",
            "type": "shell",
            "command": "cc",
            "args": [
                "-std=c99",
                // "-stdlib=libc++",
                "helloworld.c",
                "shape.c",
                "square.c",
                "-o",
                "helloworld.o",
                "-g",
                "--debug",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "GCC compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c99",
                // "-stdlib=libc++",
                "helloworld.c",
                "shape.c",
                "square.c",
                "-o",
                "helloworld.o",
                "-g",
                "--debug",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}